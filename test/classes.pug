  style.
    section {
    background: #333;
    }
    
    article {
    height: 400px;
    background: #333;
    }
    
    table {width: 100%; height: 100%;}
    table, tr th, tr td {
    border: 1px solid #a1a1a1;
    text-align: center;
    vertical-align: middle;
    }
    
    * {
    text-align: center;
    }
    
    div > div {
    background: #f0f0f0;
    text-align: center;
    margin: 1px 0;
    min-height: 100px;
    height: auto;
    }
    
    [class*="text-col-"] {
    color: red;
    }
    
    div > div:nth-child(odd),
    div > div:nth-child(3n),
    div > div:nth-child(4n) {
    color: #CCC;
    }
    
    div > div:nth-child(odd) {
    background: #333;
    }
    
    div > div:nth-child(1) {
    position: sticky;
    top: 1px;
    background: red;
    
    color: #1a1a1a;
    }
    
    div > div:nth-child(3n) {
    background: #1a1a1a;
    }
    
    div > div:nth-child(4n) {
    background: #000;
    }
    
    div.helperclasses > div {
    min-height: 200px;
    width: 200px;
    }
  
